generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Size {
  SMALL
  MEDIUM
  LARGE
}

enum Genre {
  F
  M
}

model Pet {
  id          String  @id @default(cuid())
  name        String
  genre       Genre
  personality String
  age         Int
  species     String
  color       String
  size        Size
  adopted     Boolean @default(false)

  Org      Org    @relation(fields: [org_cnpj], references: [cnpj])
  org_cnpj String

  @@map("tb_pets")
}

enum State {
  AC
  AL
  AP
  AM
  BA
  CE
  DF
  ES
  GO
  MA
  MT
  MS
  MG
  PA
  PB
  PR
  PE
  PI
  RJ
  RN
  RS
  RO
  RR
  SC
  SP
  SE
  TO
}

enum Country {
  BR
  US
  CA
  MX
  AR
  CL
  CO
  CR
  CU
  DO
  EC
  SV
  GT
  HN
  NI
  PA
  PY
  PE
  UY
  VE
}

model Org {
  cnpj     String  @id
  name     String
  password String
  email    String
  phone    String
  city     String
  state    State
  country  Country @default(BR)

  pets Pet[]

  @@map("tb_orgs")
}
